doctype html
html(lang="zh_CN")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="index.sass")
    link(rel="stylesheet", href="bubble.sass")
    link(rel="stylesheet", href="progress.sass")
    title PineAG
  body
    div#app
      svg#background(width='100%', height='100%')
      svg#bubbles.bubble-effect(width='100%', height='100%')
        - var i=0
        while i++ < 10
          g(id=`bubble${i}`)
            g.bubble-body
              circle.back
              g.pop-container
                circle.pop.b1
                circle.pop.b2
                circle.pop.b3
        g.bubble-home
          circle.back
          g.pop-container
            circle.pop.b1
            circle.pop.b2
            circle.pop.b3
      each dtype in ['shadow1', 'shadow2', 'main']
        div(class=`dashboard ${dtype}`)
          each title, index in ['上传记忆日志...', '重置外部服务上下文...', '即将进入节能模式...']
            .item
              svg.progress-container
                g.progress(id=`progress${index+1}`)
                  g.circle.outer
                    circle
                  g.circle.inner
                    circle
              .title-container
                .title
                  p.main #{title}
      img#pine(src="pine_white.gif")